class Node:
    def __init__(self, song):
        self.song = song
        self.next = None

class Playlist:
    def __init__(self):
        self.head = None

    def add(self, song):
        n = Node(song)
        if not self.head:
            self.head = n
        else:
            t = self.head
            while t.next:
                t = t.next
            t.next = n
        print("Added:", song)

    def remove(self, song):
        t, p = self.head, None
        while t:
            if t.song == song:
                if p:
                    p.next = t.next
                else:
                    self.head = t.next
                print("Removed:", song)
                return
            p, t = t, t.next
        print("Song not found:", song)

    def show(self):
        if not self.head:
            print("Playlist is empty.")
            return
        print("\nCurrent Playlist:")
        t = self.head
        while t:
            print("-", t.song)
            t = t.next


p = Playlist()

while True:
    print("\n==== Music Playlist Menu ====")
    print("1. Add Song")
    print("2. Remove Song")
    print("3. Show Playlist")
    print("4. Exit")

    choice = input("Enter your choice: ")

    if choice == "1":
        song = input("Enter song name to add: ")
        p.add(song)

    elif choice == "2":
        song = input("Enter song name to remove: ")
        p.remove(song)

    elif choice == "3":
        p.show()

    elif choice == "4":
        print("Exiting Playlist. Goodbye!")
        break

    else:
        print("Invalid choice! Try again.")
